        </div>
        <!-- ============================ COMPONENT BANNER 2  END .// ================================= -->
    </div> <!-- col.// -->
    <div class="col-md-1"></div>
</div> <!-- row.// -->
<!--Categories START-->
<section class="section-content padding-y">
    <div class="container">
        <div class="row">
            <aside class="col-md-3">
                <div class="card">
                    <article class="filter-group">
                        <header class="card-header">
                            <a href="#" data-toggle="collapse" data-target="#collapse_1" aria-expanded="true" class="">
                                <i class="icon-control fa fa-chevron-down"></i>
                                <h6 class="title">Kategoriler</h6>
                            </a>
                        </header>

                        @foreach (var ctgr in Model.CategoryList)
                        {
                            <div class="filter-content collapse show" id="collapse_1" style="">
                                <div class="card-body">
                                    <a href="#">
                                        <div class="card-banner" style="height: 100px; background-image: url('@ctgr.image_url'); ">
                                            <article class="card-img-overlay bg-gradient-red text-white">
                                                <h5 class="text-center mt-3">@ctgr.category_name</h5>
                                            </article>
                                        </div>
                                    </a>

                                </div> <!-- card-body.// -->
                            </div>
                        }

                    </article> <!-- filter-group  .// -->
                    <!--Categories END-->


                    <header class="card-header">
                        <a href="#" data-toggle="collapse" data-target="#collapse_5" aria-expanded="false" class="">
                            <i class="icon-control fa fa-chevron-down"></i>
                            <h6 class="title">Senin için </h6>
                        </a>
                    </header>
                    <div class="filter-content collapse in" id="collapse_5" style="">
                        <div class="card-body">
                            <label class="custom-control custom-radio">
                                <input type="radio" name="myfilter_radio" checked="" class="custom-control-input">
                                <div class="custom-control-label">İndirimde Ürünler</div>
                            </label>

                            <label class="custom-control custom-radio">
                                <input type="radio" name="myfilter_radio" class="custom-control-input">
                                <div class="custom-control-label">Yeni Ürünler </div>
                            </label>

                            <label class="custom-control custom-radio">
                                <input type="radio" name="myfilter_radio" class="custom-control-input">
                                <div class="custom-control-label">Bu Hafta İndirimli Ürünler</div>
                            </label>

                            <label class="custom-control custom-radio">
                                <input type="radio" name="myfilter_radio" class="custom-control-input">
                                <div class="custom-control-label">İlk Siparişe Özel Ürünler</div>
                            </label>
                        </div><!-- card-body.// -->
                    </div>
                    </article> <!-- filter-group .// -->
                </div> <!-- card.// -->

            </aside> <!-- col.// -->
            <main class="col-md-9">

                <header class="border-bottom mb-4 pb-3">
                    <div class="form-inline">
                        <span class="mr-md-auto">33 Ürün listelendi </span>
                        <select class="mr-2 form-control">
                            <option>Latest items</option>
                            <option>Trending</option>
                            <option>Most Popular</option>
                            <option>Cheapest</option>
                        </select>
                        <div class="btn-group">
                            <a href="#" class="btn btn-outline-secondary" data-toggle="tooltip" title="List view">
                                <i class="fa fa-bars"></i>
                            </a>
                            <a href="#" class="btn  btn-outline-secondary active" data-toggle="tooltip" title="Grid view">
                                <i class="fa fa-th"></i>
                            </a>
                        </div>
                    </div>
                </header><!-- sect-heading -->
                <!--ITEMS CARD START-->

                <div class="row">
                    @*@foreach (var item in Model.ItemList)
                    {*@
                        <div class="col-md-4">
                            <figure class="card card-product-grid">
                                <div class="img-wrap">
                                    <!--new-->
                                    <span class="badge badge-danger"> NEW </span>
                                    <img src="item.image_url">
                                    <a class="btn-overlay" href="#"><i class="fa fa-search-plus"></i>İncele</a>
                                </div> <!-- img-wrap.// -->
                                <figcaption class="info-wrap">
                                    <div class="fix-height">
                                        <a href="#" class="title">item.item_name</a>
                                        <div class="price-wrap mt-2">
                                            <span class="price">item.unit_price TL</span>
                                            <del class="price-old">eski fiyat</del>
                                        </div> <!-- price-wrap.// -->
                                    </div>
                                    <a href="#" class="btn btn-block btn-primary">Sepete ekle </a>
                                </figcaption>
                            </figure>
                        </div> <!-- col.// -->
                    @*}*@
                </div> <!-- row end.// -->
                <!--ITEMS CARD END-->


                <nav class="mt-4" aria-label="Page navigation sample">
                    <ul class="pagination">
                        <li class="page-item disabled"><a class="page-link" href="#">Geri</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">İleri</a></li>
                    </ul>
                </nav>

            </main> <!-- col.// -->

        </div>

    </div> <!-- container .//  -->
</section>
